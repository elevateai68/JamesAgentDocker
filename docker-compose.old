version: '3.8'

services:
  proxy:
    image: nginx:stable-alpine
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      # Mount the Nginx config and the entire SSL directory
      - ./proxy/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./james-app/ssl:/etc/ssl/certs:ro
    depends_on:
      - james
      - coqui-server

  james:
    build:
      context: ./james-app
    restart: unless-stopped
    expose:
      - "8000"
    environment:
      - OLLAMA_API_BASE=http://ollama:11434/v1

  coqui-server:
    build:
      context: ./poc_coqui_tts
    restart: unless-stopped
    ports:
      - "5002:5002"
    volumes:
      - ./tts_cache:/app/tts_cache

  ollama:
    image: ollama/ollama:latest
    restart: unless-stopped
    ports:
      - "11434:11434"